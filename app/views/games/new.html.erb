<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <header class="text-center mb-4">
        <h1 class="display-5 fw-semibold text-white">Blackjack</h1>
        <p class="text-light-emphasis lead mb-3"><%##= @game.status_text %></p>
        <%## if @game.outcome_message.present? %>
          <span class="badge text-bg-info px-3 py-2"><%##= @game.outcome_message %></span>
        <%## end %>
      </header>

      <section class="card bg-dark border-0 shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center text-white">
          <h2 class="h5 mb-0">Dealer</h2>
          <span class="badge text-bg-light text-dark">
            <%## if @game.finished? %>
              Total: <%#= @game.dealer_total %>
            <%# else %>
              Showing: <%#= card_badge(@game.dealer_upcard) %>
            <%# end %>
          </span>
        </div>
        <div class="card-body bg-body-secondary">
          <%#= cards_row(@game.dealer_cards, hide_second: @game.player_turn?) %>
        </div>
      </section>

      <section class="card bg-dark border-0 shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center text-white">
          <h2 class="h5 mb-0">You</h2>
          <span class="badge text-bg-warning text-dark">Total: <%#= @game.player_total %></span>
        </div>
        <div class="card-body bg-body-secondary">
          <%#= cards_row(@game.player_cards) %>
        </div>
      </section>

      <section class="card bg-dark border-0 shadow-sm">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
          <div class="text-light-emphasis">
            <p class="mb-1">Cards remaining in deck: <strong><%#= @game.deck.length %></strong></p>
            <p class="mb-0 small fst-italic">
              <%# if @game.player_turn? %>
                Hit to draw another card, or stand to let the dealer play.
              <%# else %>
                Round finished. Start a new round when you're ready.
              <%# end %>
            </p>
          </div>
          <div class="d-flex flex-wrap justify-content-center gap-2">
            <%#= button_to "Hit", hit_game_path(@game), method: :post, class: "btn btn-primary px-4", disabled: !@game.player_turn?, form: { class: "d-inline" } %>
            <%#= button_to "Stand", stand_game_path(@game), method: :post, class: "btn btn-warning px-4 text-dark", disabled: !@game.player_turn?, form: { class: "d-inline" } %>
            <%#= button_to "Reset Round", reset_round_game_path(@game), method: :post, class: "btn btn-outline-light px-4", data: { turbo_confirm: "Reset the current round?" }, form: { class: "d-inline" } %>
            <%#= button_to "New Round", games_path, method: :post, class: "btn btn-success px-4", form: { class: "d-inline" } %>
          </div>
        </div>
      </section>

      <section class="card bg-body-secondary border-0 shadow-sm mt-4">
        <div class="card-body">
          <h2 class="h5 fw-semibold mb-3">House Rules</h2>
          <ul class="text-light-emphasis mb-0">
            <li>Dealer stands on all 17s.</li>
            <li>Aces count as 11 unless that would bust the hand.</li>
            <li>Blackjack is 21 on the first two cards.</li>
            <li>No betting, splits, or insurance.</li>
          </ul>
        </div>
      </section>
    </div>
  </div>
</div>
